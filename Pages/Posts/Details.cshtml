@page
@model blog.DetailsModel

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Post.Title);
}

<h1>@Html.DisplayFor(model => model.Post.Title)</h1>
<p style="color:dimgrey"><i>@Html.DisplayFor(modelItem => Model.Post.LastEdited)</i></p>
<p>@Html.DisplayFor(model => model.Post.Preview)</p>
<hr />
<p>@Html.DisplayFor(model => model.Post.Body)</p>

<div>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Post.ID">Edit</a>
    }
    <a asp-page="./Index">Back to List</a>
</div>
